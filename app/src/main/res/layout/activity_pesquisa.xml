<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Pesquisa">


    <TextView
        android:id="@+id/tituloPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TituloPesquisa"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_below="@+id/tituloPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/pesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloPesquisa"
        android:hint="Selecione o seu destino"
        android:drawableEnd="@drawable/ic_search_icon"
        android:layout_marginRight="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_search_icon"
        android:layout_toEndOf="@+id/pesquisa"
        android:layout_below="@+id/tituloPesquisa"
        />
</LinearLayout>
</RelativeLayout>