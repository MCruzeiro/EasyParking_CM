            android:text="Ar Livre"
            ></CheckBox>


        <CheckBox
            android:id="@+id/Gravidas"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Pago"
            android:layout_marginLeft="100dp"
            android:text="Gravidas"
