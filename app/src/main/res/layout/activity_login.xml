<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/easyparking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyParking"
        android:textSize="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"></TextView>


    <TextView
        android:id="@+id/registo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easyparking"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:text="Bem-vindo"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="E-mail" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/etEmail"
        android:hint="Palavra-passe" />


    <TextView
        android:id="@+id/criarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/etPass"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:text="Iniciar SessÃ£o"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="71dp"
        android:layout_height="186dp"
        android:layout_below="@+id/criarConta"
        android:layout_marginTop="-120dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/seta"
        android:clickable="true"
        android:onClick="login"></ImageView>



</RelativeLayout>