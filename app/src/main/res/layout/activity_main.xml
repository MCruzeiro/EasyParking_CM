<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/easyparking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyParking"
        android:textSize="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"></TextView>

    <TextView
        android:id="@+id/registo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easyparking"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="Registo"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/etNome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registo"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"

        android:hint="Nome" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/etNome"
        android:hint="E-mail" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/etEmail"
        android:hint="Palavra-passe" />

    <EditText
        android:id="@+id/etConfirmaPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPass"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Confirmar Palavra-passe" />

    <TextView
        android:id="@+id/criarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etConfirmaPass"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:text="Criar Conta"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="71dp"
        android:layout_height="186dp"
        android:layout_below="@+id/criarConta"
        android:layout_marginTop="-120dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/seta"></ImageView>


</RelativeLayout>